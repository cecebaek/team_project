<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.team_project">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".TeamApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_yoked_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_yoked_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MatchingActivity"></activity>
        <activity android:name=".ProfilePictureActivity" />
        <activity android:name=".TagFriendActivity"></activity>
        <activity android:name=".UserSettingsActivity" />
        <activity android:name=".ProfilePictureActivity" />
        <activity android:name=".OtherUserProfileActivity" />
        <activity android:name=".SearchActivity" />
        <service android:name=".MessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <activity android:name=".MessageDetailsActivity" />
        <activity android:name=".CalendarActivity" />
        <activity android:name=".ComposeMessageActivity" />
        <activity android:name=".MainMessenger" />
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".FirstActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignupActivity" />
    </application>

</manifest>