        </activity>
        <activity
            android:name="com.example.yoked.MainActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name="com.example.yoked.LoginActivity" />
        <activity android:name="com.example.yoked.FirstActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
